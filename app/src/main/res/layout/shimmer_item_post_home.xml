<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/ownerImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@color/grey_trans_50" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="16dp"
                    android:background="@color/grey_trans_50" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey_trans_50" />
            </LinearLayout>

            <TextView
                android:id="@+id/follow"
                android:layout_width="65dp"
                android:layout_height="14sp"
                android:background="@color/grey_trans_50"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_margin="5dp"
                android:background="@color/grey_trans_50" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="30dp"
                android:background="@color/grey_trans_50" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@color/grey_trans_50" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/post_image"
                android:scaleType="centerInside"
                android:src="@color/grey_trans_50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/favourite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/checkbox_favourite"
                android:button="@null"
                android:checked="false"
                android:stateListAnimator="@animator/scale" />

            <ImageButton
                android:id="@+id/comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_comment"
                android:contentDescription="@string/comment_icon" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_share"
                android:contentDescription="@string/share_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/bookmark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/checkbox_bookmark"
                android:button="@null"
                android:checked="false"
                android:contentDescription="@string/bookmark_icon"
                android:stateListAnimator="@animator/scale" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>